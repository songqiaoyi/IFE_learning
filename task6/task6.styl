$main-color=#d45d5c
body
    background #5d5d5d
    margin 0
    padding 0
h1,h2,h3,h4,h5,h6
    margin 0
.wrapper
    width 892px
    height 1386px
    background #fff
    padding 0 44px
    margin 0 auto
    .header
        height 61px
        border-bottom 2px solid #938e8c
        font-size 12px
        margin-bottom 35px

        .left
            background $main-color
            width 104px
            height 15px
            color #fff
            font-family '黑体'
            padding 43px 0px 3px 6px
            display inline-block
        .right
            float right
            color $main-color
            font-family '黑体'
            height 15px
            padding 43px 0px 3px 6px
    .main-up
        position relative
        .pic-wrapper
            width 641px
            height 301px
            overflow hidden
            position relative
            display inline-block
            .shade
                z-index 999
                width 191px
                height 301px
                position absolute
                opacity 0.5
            .left-wrapper
                background #335643
                top 0
                left 0
            .right-wrapper
                background #cc7680
                right 0
                top 0
        .title-wrapper
            display inline-block
            border-top 2px solid #cc8091
            position absolute
            width 203px
            right 0
            font-family "Microsoft YaHei"
            h2
                font-size 24px
                color #000
                text-decoration underline
                &:first-letter
                    font-size 1.2em
            .subtible
                font-size 12px
                color #676767
                margin-bottom 10px
                font-family "楷体"
                &:first-letter
                    text-transform uppercase
            h1
                font-size 100px
                color #418c59
                font-style italic
            .title1
                font-size 55px
                color #cc8091
                display inline-block
            .title-div
                color #cc8091
                display inline-block
                .title2
                    font-size 21px
                .title3
                    font-size 12px
        .para-wrapper
            width 641px
            display flex
            .what,.when
                flex 4
            .how
                flex 3
            div
                display inline-block
                p:first-child
                    font-weight 800
                    text-decoration underline
                    font-size 16px
                    &.what
                        color #418c59
                    &.when
                        color #d2994f
                    &.how
                        color #cc7680
                p:last-child
                    font-size 12px
                    font-family "Microsoft YaHei"
                    color #231815
                    margin 16px 0
                    opacity 0.7
                    padding-right 16px

    .main-down
        .left
            width 458px
            .title
                font-size 42px
                color #11456b
                font-family '黑体'
                margin-bottom 16px
                span
                    font-size 72px
                    color #f5e327
                    font-style italic
                    font-weight bold
            .subtitle
                font-size 33px
                color #11456b
                font-family '黑体'
                font-weight bold
                padding-bottom 15px
                border-bottom 2px solid #11456b
            .para
                p
                    text-indent 2em
                    &:first-letter
                        font-size 70px
                        color #f5e327
                        font-family "Microsoft YaHei"





