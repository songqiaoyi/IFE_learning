$mian-color = #e74f4d
$YaHei = "Microsoft YaHei"
$simHei = "simHei"

under-line(color, pos)
	&:before
		position absolute
		top pos
		left calc(50% - 15px)
		content ''
		width 30px
		height 2px
		background color

body
